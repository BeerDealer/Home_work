<%- include('../port/layout-start', {title: title}) %> <%-
include('../port/menu') %>

<h1 class="p-3"><%= title %></h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Название: <%= book.title %></h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Описание: <%= book.description %></li>
          <li class="list-group-item">Авторы: <%= book.authors %></li>
          <li class="list-group-item">Избранное: <%= book.favorite %></li>
        </ul>
        <div class="text-right">
          <a class="btn btn-sm btn-primary" href="/update/<%= book.id %>">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <form action="/delete/<%= book.id %>" method="POST" class="d-inline">
            <button class="btn btn-sm btn-danger">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../port/layout-end') %>
