<form method="POST" class="mt-5 p-5">
  <div class="form-group">
    <label for="inputTitle">Название</label>
    <input
      type="text"
      name="title"
      class="form-control"
      id="inputTitle"
      value="<%= book.title %>"
    />
  </div>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea rows="3" name="description" class="form-control" id="inputDesc">
<%= book.description %></textarea
    >
  </div>
  <div class="form-group">
    <label for="inputTitle">Авторы</label>
    <input
      type="text"
      name="authors"
      class="form-control"
      id="inputTitle"
      value="<%= book.authos %>"
    />
  </div>
  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
